{
    "schemaVersion": 1,
    "id": "foundations",
    "version": "${version}",

    "name": "Foundations",
    "description": "A Fabric mod that focuses on changing early game progression that makes the gameplay feel more \"realistic\". Port of EarlyGame for modern versions.",
    "authors": [
        "me.brynblack"
    ],
    "contact": {
        "sources": "https://github.com/brynblack/foundations",
        "issues": "https://github.com/brynblack/foundations/issues"
    },

    "license": "MIT",
    "icon": "assets/foundations/icon.png",
  
    "environment": "*",
    "entrypoints": {
        "main": [
            "me.brynblack.foundations.Foundations"
        ],
        "client": [
            "me.brynblack.foundations.FoundationsClient"
        ],
        "modmenu": [
            "me.brynblack.foundations.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "foundations.mixins.json"
    ],
  
    "depends": {
        "fabricloader": ">=0.16.2",
        "fabric": "*",
        "minecraft": "1.21.4",
        "java": ">=23"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/foundations",
                "modmenu.modrinth": "https://modrinth.com/mod/foundations",
                "modmenu.wiki": "https://me.brynblack.github.io/foundations/wiki/home.html"
            }
        }
    }
}
